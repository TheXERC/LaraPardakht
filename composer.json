{
    "name": "larapardakht/larapardakht",
    "description": "A modern, extensible payment gateway integration package for Laravel supporting Iranian payment providers.",
    "keywords": [
        "laravel",
        "payment",
        "gateway",
        "zarinpal",
        "zibal",
        "iran",
        "payment-gateway"
    ],
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "LaraPardakht",
            "email": "info@larapardakht.com"
        }
    ],
    "require": {
        "php": "^8.2",
        "illuminate/support": "^11.0|^12.0",
        "illuminate/http": "^11.0|^12.0"
    },
    "require-dev": {
        "orchestra/testbench": "^9.0|^10.0",
        "pestphp/pest": "^3.0",
        "pestphp/pest-plugin-laravel": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "LaraPardakht\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "LaraPardakht\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "LaraPardakht\\PaymentServiceProvider"
            ],
            "aliases": {
                "Payment": "LaraPardakht\\Facades\\Payment"
            }
        }
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "test": "vendor/bin/pest"
    }
}
